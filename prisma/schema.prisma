generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  user_id    String   @unique
  token      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model User {
  user_id         Int        @unique
  email           String
  first_name      String
  last_name       String
  height_meter    Decimal
  weight_kilogram Decimal
  max_heart_rate  Int
  cycles          Cycle[]
  sleeps          Sleep[]
  recoveries      Recovery[]
}

model Cycle {
  cycle_id           Int      @unique
  user_id            Int
  user               User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  created_at         DateTime
  updated_dt         DateTime
  start              DateTime
  end                DateTime
  timezone_offset    String
  score_state        String
  strain             Decimal
  kilojoule          Decimal
  average_heart_rate Int
  max_heart_rate     Int
}

model Recovery {
  cycle_id           Int      @unique
  sleep_id           Int
  user_id            Int
  user               User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  created_at         DateTime
  updated_at         DateTime
  score_state        String
  user_calibrating   Boolean
  recovery_score     Int
  resting_heart_rate Int
  hrv_rmssd_milli    Decimal
  spo2_percentage    Decimal
  skin_temp_celsius  Decimal
}

model Sleep {
  sleep_id                                   Int      @unique
  user_id                                    Int
  user                                       User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  created_at                                 DateTime
  updated_at                                 DateTime
  start                                      DateTime
  end                                        DateTime
  timezone_offset                            String
  nap                                        Boolean
  score_state                                String
  total_in_bed_time_milli                    Int
  awake_time_milli                           Int
  no_data_time_milli                         Int
  total_light_sleep_time_milli               Int
  total_slow_wave_sleep_time_milli           Int
  total_rem_sleep_time_milli                 Int
  sleep_cycle_count                          Int
  sleep_disturbance_count                    Int
  sleep_needed_baseline_milli                Int
  sleep_needed_need_from_sleep_debt_milli    Int
  sleep_needed_need_from_recent_strain_milli Int
  sleep_needed_need_from_recent_nap_milli    Int
  sleep_respiratory_rate                     Decimal
  sleep_performance_percentage               Int
  sleep_consistency_percentage               Int
  sleep_efficiency_percentage                Decimal
}
